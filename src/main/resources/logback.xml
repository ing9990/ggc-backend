<configuration>
    <appender name="DISCORD" class="com.github.napstr.logback.DiscordAppender">
        <webhookUri>
            https://discord.com/api/webhooks/1172003216280526952/3OWJVbTkSi5vSWwtgitidQGclgH-Vz2gDsCVs_kKtD0fUvl1EVPpZrdk0Z9YECC8GaVH
        </webhookUri>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{HH:mm:ss} [%thread] [%-5level] %logger{36} - %msg%n```%ex{full}```</pattern>
        </layout>
        <username>GigaLogger</username>
        <tts>false</tts>
    </appender>

    <appender name="ASYNC_DISCORD" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="DISCORD"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
            <level>INFO</level>
            <level>DEBUG</level>
        </filter>
    </appender>
    <root>
        <level value="INFO"/>
        <appender-ref ref="ASYNC_DISCORD"/>
    </root>
</configuration>